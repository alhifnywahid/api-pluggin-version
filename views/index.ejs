<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #1E1E1E;
      color: #ffffff;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }
    .container {
      width: 90%;
      max-width: 600px;
      margin: 20px auto;
      padding: 20px;
      background-color: #2C2C2C;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    }
    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px 0;
      border-bottom: 1px solid #444;
    }
    .header h1 {
      margin: 0;
      font-size: 1.5em;
    }
    .header .toggle {
      display: flex;
      align-items: center;
    }
    .header .toggle input {
      display: none;
    }
    .header .toggle label {
      cursor: pointer;
      width: 40px;
      height: 20px;
      background-color: #444;
      border-radius: 10px;
      position: relative;
      transition: background-color 0.3s;
    }
    .header .toggle label::before {
      content: '';
      position: absolute;
      width: 18px;
      height: 18px;
      background-color: #fff;
      border-radius: 50%;
      top: 1px;
      left: 1px;
      transition: transform 0.3s;
    }
    .header .toggle input:checked + label {
      background-color: #00A5FF;
    }
    .header .toggle input:checked + label::before {
      transform: translateX(20px);
    }
    .tabs {
      display: flex;
      justify-content: space-around;
      border-bottom: 1px solid #444;
      margin-top: 20px;
    }
    .tabs button {
      background-color: #2C2C2C;
      border: none;
      padding: 10px;
      cursor: pointer;
      color: #fff;
      font-size: 1em;
      transition: background-color 0.3s;
    }
    .tabs button:hover {
      background-color: #444;
    }
    .tabs button.active {
      background-color: #00A5FF;
    }
    .tab-content {
      display: none;
    }
    .tab-content.active {
      display: block;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }
    table, th, td {
      border: 1px solid #444;
    }
    th, td {
      padding: 10px;
      text-align: left;
      font-size: 0.9em;
    }
    th {
      background-color: #333;
    }
    td a {
      color: #00A5FF;
      text-decoration: none;
      padding: 5px 10px;
      border: 1px solid #00A5FF;
      border-radius: 5px;
      transition: background-color 0.3s, color 0.3s;
    }
    td a:hover {
      background-color: #00A5FF;
      color: #fff;
    }
    .status {
      display: inline-block;
      width: 10px;
      height: 10px;
      border-radius: 50%;
      margin-right: 10px;
    }
    .status.green {
      background-color: #00FF00;
    }
    .status.red {
      background-color: #FF0000;
    }
    .footer {
      display: flex;
      justify-content: center;
      padding: 10px 0;
      border-top: 1px solid #444;
      margin-top: 20px;
    }
    .footer button {
      background-color: #333;
      color: #fff;
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s;
    }
    .footer button:hover {
      background-color: #444;
    }
    @media (max-width: 600px) {
      .header h1 {
        font-size: 1.2em;
      }
      th, td {
        padding: 5px;
        font-size: 0.8em;
      }
      .footer button {
        padding: 8px 16px;
        font-size: 0.8em;
      }
    }
    button {
      border-radius: 8px;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h1>OPEN'S API</h1>
      <div class="toggle">
        <input type="checkbox" id="toggle-switch">
        <label for="toggle-switch"></label>
      </div>
    </div>
    <div class="tabs">
      <% const categories = [...new Set(routes.map(route => route.category))]; %>
      <% categories.forEach((category, index) => { %>
        <button class="<%= index === 0 ? 'active' : '' %>" onclick="openTab('<%= category %>')"><%= category %></button>
      <% }); %>
    </div>
    <% categories.forEach((category, index) => { %>
      <div class="tab-content <%= index === 0 ? 'active' : '' %>" id="<%= category %>">
        <table>
          <thead>
            <tr>
              <th>Status</th>
              <th>Name</th>
              <th>Method</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% routes.filter(route => route.category === category).forEach(route => { %>
              <tr>
                <td><span class="status <%= route.category === 'Downloader' ? 'green' : 'red' %>"></span></td>
                <td><%= route.name %></td>
                <td><%= route.method.toUpperCase() %></td>
                <td><a target="_blank" href="<%= route.path %>">View</a></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% }); %>
    <div class="footer">
      <button>Next</button>
    </div>
  </div>

  <script>
    function openTab(category) {
      var i, tabcontent, tablinks;
      tabcontent = document.getElementsByClassName("tab-content");
      for (i = 0; i < tabcontent.length; i++) {
        tabcontent[i].style.display = "none";
      }
      tablinks = document.getElementsByClassName("tabs")[0].getElementsByTagName("button");
      for (i = 0; i < tablinks.length; i++) {
        tablinks[i].className = tablinks[i].className.replace(" active", "");
      }
      document.getElementById(category).style.display = "block";
      event.currentTarget.className += " active";
    }
  </script>
</body>
</html>
